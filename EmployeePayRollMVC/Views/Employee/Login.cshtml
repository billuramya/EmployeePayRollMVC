@model CommonLayer.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 style ="color:orangered;">Login</h1>

<h4 style="color:navy;">EmployeeLogin</h4>
<hr />
<div class="row" style="text-align:center;">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin:20px;">
                <div class="d-flex ">
                <label asp-for="Id" class="control-label" style="margin-right:42px;margin-left:10px;"></label>
                <input asp-for="Id" class="form-control" placeholder="Enter your id" />
                </div>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <div class="d-flex">
                    <label asp-for="Name" class="control-label" style="margin-right:20px;"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
